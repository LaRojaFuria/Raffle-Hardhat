{
  "name": "hardhat-smartcontract-lottery-fcc",
  "version": "1.0.0",
  "description": "A decentralized lottery system built with Hardhat, utilizing Chainlink Oracles and OpenZeppelin's upgradeable contracts. This project includes a comprehensive suite of tools for testing, deployment, and security analysis of smart contracts.",
  "scripts": {
    "test": "yarn hardhat test",
    "test-staging": "yarn hardhat test --network sepolia",
    "lint": "yarn solhint 'contracts/*.sol'",
    "lint:fix": "yarn solhint 'contracts/**/*.sol' --fix",
    "format": "yarn prettier --write .",
    "coverage": "yarn hardhat coverage",
    "deploy": "yarn hardhat deploy --network <network>",
    "verify": "yarn hardhat verify --network <network>",
    "clean": "hardhat clean",
    "flatten": "hardhat flatten > flattened.sol"
  },
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-solhint": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.0.2",
    "chai": "^5.1.0",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^6.11.1",
    "hardhat": "^2.21.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^1.0.10",
    "hardhat-prettier": "^1.0.0",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.10"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@chainlink/test-helpers": "^0.0.7-alpha",
    "@chainlink/token": "^1.1.0",
    "@openzeppelin/contracts": "^4.9.2",
    "babel-eslint": "^10.1.0",
    "dotenv": "^16.4.5"
  },
  "mocha": {
    "timeout": 200000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/hardhat-smartcontract-lottery-fcc.git"
  }
}
